ramp-capacity-1 = ${self.empty}
ramp-capacity-2 = ${self.quarter}
ramp-capacity-3 = ${self.quarter}
ramp-capacity-4 = ${self.half}
ramp-capacity-5 = ${self.half}
ramp-capacity-6 = ${self.threequarters}
ramp-capacity-7 = ${self.threequarters}
ramp-capacity-8 = ${self.threequarters}
ramp-capacity-9 = ${self.full}
