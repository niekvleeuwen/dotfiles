ramp-load-4 = ${self.normal}
ramp-load-5 = ${self.normal}
ramp-load-6 = ${self.danger}
ramp-load-7 = ${self.danger}
ramp-load-8 = ${self.full}
ramp-load-9 = ${self.full}

